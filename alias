alias pip3="python3 -m pip"
alias sudo='sudo '

alias e='$EDITOR'
alias o='xdg-open'
alias i='ipython'

function p() {
    pacaur $@
    rehash
}
compdef p=pacaur

# git flow shortcuts (additons to the git-flow plugin)
