alias x=exit

alias pu='p -Syu'

function p() {
    trizen $@
    rehash
}
compdef p=trizen

# Show a tree of all files and directories in a directory.
# Show next level with <CR> and quit with <C-c>
function ta() {
    I=1
    while true; do
        echo Level: $1
        tree -L $I
        I=$((I+1))
        read
    done
}

# Show the filetype of all the files in a directory (recursive).
function fa() {
    if [ -z $1 ]; then
        file **/*
    else
        file $1/**/*
    fi
}

